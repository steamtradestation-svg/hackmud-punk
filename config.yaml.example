# Example config for punk (edit and save as config.yaml)
shell_path: ~/.config/hackmud/shell.txt      # path to the game's shell log file
poll_interval: 0.5                           # seconds between polling checks (or use watchdog events)
send_method: tmux                            # options: tmux, xdotool, dry-run
tmux:
  session: hackmud
  window: 1
  pane: 0
xdotool:
  window_name: "hackmud"
handlers:
  - name: example
    enabled: true
ai:
  enabled: false
  provider: openai
  api_key: ""
